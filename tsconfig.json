{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": [
            "./controllers/*"
      ],
      "@services/*": [
            "./services/*"
      ],
      "@entities/*": [
            "./entities/*"
      ],
      "@utils/*": [
            "./utils/*"
      ],
      "@types/*": [
            "./types/*"
      ],
      "@config/*": [
            "./config/*"
      ],
      "@middlewares/*": [
            "./middlewares/*"
      ],
      "@dto/*": [
            "./dto/*"
      ],
      "@queues/*": [
            "./queues/*"
      ],
      "@helpers/*": [
            "./helpers/*"
      ],
      "@tests/*": [
            "../tests/*"
      ]
}
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
